<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
android:layout_marginTop="10dp">

	<TextView
			android:text="Username"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:id="@+id/username"
			app:layout_constraintTop_toTopOf="@+id/profile_pic"
			android:layout_marginBottom="8dp"
			app:layout_constraintBottom_toBottomOf="@+id/profile_pic" app:layout_constraintStart_toEndOf="@+id/profile_pic"
			android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
	<ImageView
			android:layout_width="60dp"
			android:layout_height="60dp" app:srcCompat="@android:drawable/btn_dialog"
			android:id="@+id/profile_pic" android:layout_marginTop="16dp"
			app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="16dp"/>
</android.support.constraint.ConstraintLayout>