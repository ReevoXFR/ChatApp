<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content">

	<TextView
			android:text="Username"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/chat_message_username"
			app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
			app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
			app:layout_constraintHorizontal_bias="0.272"
			app:layout_constraintBottom_toTopOf="@+id/imageView_from_row" android:layout_marginBottom="1dp"/>
	<ImageView
			android:layout_width="50dp"
			android:layout_height="50dp" app:srcCompat="@android:drawable/presence_online"
			android:id="@+id/imageView_toRow"
			app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
			android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"/>
	<ImageView
			android:layout_width="300dp"
			android:layout_height="wrap_content"
			android:maxHeight="300dp"
			android:id="@+id/imageView_from_row"
			android:scaleType="fitCenter"
			app:layout_constraintTop_toTopOf="@+id/imageView_toRow"
			app:layout_constraintStart_toEndOf="@+id/imageView_toRow" android:layout_marginStart="16dp"
			app:layout_constraintBottom_toBottomOf="@+id/imageView_toRow"
			android:padding="16dp" android:layout_marginTop="8dp" android:layout_marginBottom="8dp"/>

	<TextView
			android:text="HH:MM"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/chat_message_timestamp"
			app:layout_constraintStart_toStartOf="parent"
			android:layout_marginStart="12dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
			app:layout_constraintHorizontal_bias="0.031"
			app:layout_constraintBottom_toBottomOf="parent"
			android:layout_marginBottom="8dp" android:layout_marginTop="2dp"
			app:layout_constraintTop_toBottomOf="@+id/imageView_toRow" app:layout_constraintVertical_bias="0.0"/>

</android.support.constraint.ConstraintLayout>