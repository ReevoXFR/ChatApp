<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="wrap_content">

	<ImageView
			android:layout_width="25dp"
			android:layout_height="17dp" app:srcCompat="@android:drawable/presence_online"
			android:id="@+id/imageView_fromRow"
			app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
			android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="8dp"/>
	<TextView
			android:text="This is my text message, long ass text message. Such wow. Multiple lines, u see? Haha, not funny. "
			android:layout_width="wrap_content"
			android:maxWidth="350dp"
			android:layout_height="wrap_content"
			android:id="@+id/textView_from_row"
			app:layout_constraintTop_toTopOf="@+id/imageView_fromRow"
			app:layout_constraintStart_toEndOf="@+id/imageView_fromRow" android:layout_marginStart="16dp"
			app:layout_constraintBottom_toBottomOf="@+id/imageView_fromRow"
			android:background="@drawable/rounded_edittext_register_login"
			android:padding="16dp" android:layout_marginTop="8dp" android:layout_marginBottom="8dp"/>
</android.support.constraint.ConstraintLayout>