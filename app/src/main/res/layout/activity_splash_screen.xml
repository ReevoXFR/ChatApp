<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageView
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bg"
            android:scaleType="centerCrop" tools:ignore="ContentDescription"/>

    <ImageView
            android:id="@+id/hoc_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/hoc_logo"
            android:scaleType="centerInside"
            app:layout_constraintStart_toStartOf="@+id/background" app:layout_constraintEnd_toEndOf="@+id/background"
            android:layout_marginEnd="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/background" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/background" tools:ignore="ContentDescription"/>

